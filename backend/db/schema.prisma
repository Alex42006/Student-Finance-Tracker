generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  email         String          @unique
  password      String
  createdAt     DateTime        @default(now())
  transactions  Transaction[]
  mealSwipes    MealSwipe[]
  subscriptions Subscription[]
  financialAid  FinancialAid[]
  budgets       Budget[]
}


model Transaction {
  id Int        @id @default(autoincrement())
  userID Int
  amount Float
  category String 
  type String 
  loggedAt DateTime @default(now())
  user User @relation(fields:[userID],references:[id])
}

model MealSwipe {
  id Int @id @default(autoincrement())
  userID Int 
  swipesTotal Int 
  swipesUsed Int @default(0)
  weekStartDate DateTime @default(now())
  user User @relation(fields:[userID],references:[id])
  diningDollars Int @default(0)
}

model Subscription {
  id Int @id @default(autoincrement())
  userID Int
  name String
  amount Float
  billingCycle String
  description String?
  firstPaymentDate DateTime
  user User @relation(fields:[userID],references:[id])
}

model FinancialAid {
  id               Int       @id @default(autoincrement())
  userID           Int
  aidType          String
  amountAwarded    Float
  termSeason       TermSeason
  termYear         Int
  disbursementDate DateTime
  repeats          Boolean   @default(false)
  repeatInterval   RepeatInterval?
  user User @relation(fields: [userID], references: [id])
}

enum TermSeason {
  FALL
  SPRING
  SUMMER
}

enum RepeatInterval {
  SEMESTER
  YEAR
  MONTH
}

model Budget {
  id           Int       @id @default(autoincrement())
  userID       Int
  category     String
  limitAmount  Float
  spentAmount  Float      @default(0)
  period       String
  goalAmount   Float?
  goalDeadline DateTime?

  user User @relation(fields: [userID], references: [id])
}
